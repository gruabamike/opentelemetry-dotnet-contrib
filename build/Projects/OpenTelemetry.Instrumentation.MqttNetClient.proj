<Project>

  <PropertyGroup>
    <RepoRoot>$([System.IO.Directory]::GetParent($(MSBuildThisFileDirectory)).Parent.Parent.FullName)</RepoRoot>
    <MinVerTagPrefix>Instrumentation.MqttNetClient-</MinVerTagPrefix>
  </PropertyGroup>

  <ItemGroup>
    <SolutionProjects Include="$(RepoRoot)\src\OpenTelemetry.Instrumentation.MqttNetClient\OpenTelemetry.Instrumentation.MqttNetClient.csproj" />

    <PackProjects Include="$(RepoRoot)\src\OpenTelemetry.Instrumentation.MqttNetClient\OpenTelemetry.Instrumentation.MqttNetClient.csproj" />
  </ItemGroup>

  <Target Name="Build">
    <MSBuild Projects="@(SolutionProjects)" Targets="Build" ContinueOnError="ErrorAndStop" />
  </Target>

  <Target Name="Restore">
    <MSBuild Projects="@(SolutionProjects)" Targets="Restore" ContinueOnError="ErrorAndStop" />
  </Target>

  <Target Name="Pack">
    <MSBuild Projects="@(PackProjects)" Targets="Pack" ContinueOnError="ErrorAndStop" />
  </Target>

</Project>
